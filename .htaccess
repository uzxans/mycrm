RewriteEngine On

# Разрешаем доступ к API файлам
RewriteCond %{REQUEST_URI} ^/api/ [NC]
RewriteRule ^ - [L]

# Разрешаем прямой доступ к реальным файлам и директориям
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Все остальные запросы направляем в default.php
RewriteRule ^(.*)$ default.php?page=$1 [QSA,L]